<%= render "folders/header2" =%>

<h1>Admin page</h1>
<p>This page will include a login form as well as a link for OTP</p>
<div class='login_form_div'> <!-- Added a div around the login form to help with styling :) -->
<%= form_with url: "/login_otp", method: :post do |form| %>
    <%= form.label :username, "Username: " %>
    <%= form.text_field :username %> <br> <br>
    <%= form.label :password, "Password: " %>
    <%= form.password_field :password %><br> <br>
    <%= form.submit "Login" %>
    <% end %>
</div>
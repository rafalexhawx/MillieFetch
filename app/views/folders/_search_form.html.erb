<div class="field form-group row mb-3"> 
    <br/>
    <%= form_with url: "folders/search", method: :get do |form|%>
        <%= form.label :query, "The title that you want to find" %>
        
        <br/><br/>
        
        <%= form.text_field :query, class:"form-control input-lg", placeholder:"Search Word", id:"qq"  %>
        <br/>
        <%= form.submit "Search", class:"btn btn-primary" %>
    <% end %>
</div>
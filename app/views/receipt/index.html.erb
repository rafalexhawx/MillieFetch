<br> 


<h1>MillieFetch research receipt</h1>
<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>  

<div class='receipt_div' style='padding-left: 2px'>
<table class='receipt_table' style='border: 2px gray solid;border-collapse: collapse;padding: 2px;'>
<tr>
<% @m.each do |k| %>
<th class='receipt_th' style='border: 2px gray solid;border-collapse: collapse;padding: 2px;'><%= k %></th>
<% end %>
<th class='receipt_th' style='border: 2px gray solid;border-collapse: collapse;padding: 2px;'>content link</th>
</tr>
<% @meta.each_with_index do |me, i| %>
<tr class='receipt_tr' style='border: 2px gray solid;border-collapse: collapse;padding: 2px;'>
<% @m.each do |k| %>
<td class='receipt_td' style='border: 2px gray solid;border-collapse: collapse;padding: 2px;'><%= me[k] %></td>
<% end %>
<td class='receipt_td' style='border: 2px gray solid;border-collapse: collapse;padding: 2px;'><a href='<%= @contents[i][:content_path].to_s.split('/')[-1] %>'><%= @contents[i][:content_path].to_s.split('/')[-1] %></a></td>
</tr>
<% end %>
</table>
</div>

